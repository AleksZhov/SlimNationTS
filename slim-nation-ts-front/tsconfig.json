{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2018",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "rootDir":"src",
    "outDir": "build",
    // "typeRoots": ["node_modules/@types"],
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@useCaseAuth/*":["Domain/UseCase/auth/*"]
    }
  }
}
